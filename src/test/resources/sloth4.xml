<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context" xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context  http://www.springframework.org/schema/context/spring-context-3.0.xsd ">

	<context:annotation-config />
	<context:component-scan base-package="io.microstack.sloth" />
	<bean name="slothOptions" class="io.microstack.sloth.SlothOptions">
		<property name="maxElectionTimeout" value="300"></property>
		<property name="minElectionTimeout" value="150"></property>
		<property name="idx" value="4"></property>
		<property name="voteTimeout" value="400"></property>
		<property name="callbackPoolSize" value="10"></property>
		<property name="replicateLogInterval" value="100"></property>
		<property name="endpointStr" value="127.0.0.1:9527,127.0.0.1:9528,127.0.0.1:9529,127.0.0.1:9530,127.0.0.1:9531"></property>
		<property name="binlogPath" value="/tmp/binlogger4"></property>
		<property name="dataPath" value="/tmp/data4"></property>
		<property name="httpPort" value="8531"></property>
		<property name="resourcePath" value="/Users/imotai/workspace/gitsloth/statics"></property>
	</bean>
	
</beans>

